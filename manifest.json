{
  "manifest_version": 3,
  "name": "YouTube Stream Mode",
  "description": "Скрывает длительность видео и прогресс-бар на YouTube для просмотра без спойлеров",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "css": ["styles.css"],
    "js": ["live-storage.js", "content-script.js"]
  }],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/*", "popup.css"],
    "matches": ["*://*.youtube.com/*"]
  }]
} 